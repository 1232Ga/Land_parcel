<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_20dp"
    android:layout_marginTop="@dimen/_20dp"
    android:layout_marginRight="@dimen/_20dp"
    android:background="@drawable/back_white_rect_line"
    android:orientation="horizontal"
    android:padding="@dimen/_12dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".2"
        android:id="@+id/ll_doc_file"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_62dp"
            android:layout_height="@dimen/_62dp"
            android:background="@drawable/pdf_bg"
            android:padding="@dimen/_10dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_pdf" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".8"
        android:orientation="vertical"
        android:paddingStart="@dimen/_12dp">

        <!-- Owner Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/owner_name"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/owner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/_4dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />

        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:background="@color/layout_bg" />

        <!-- Plot No -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plot_no"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/plot_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />
        <!-- Divider Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:background="@color/layout_bg" />

        <!-- Updated date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated on"
            android:textColor="@color/text_color_light"
            android:textSize="@dimen/_12sp" />

        <TextView
            android:id="@+id/update_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
