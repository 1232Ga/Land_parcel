<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.DashboardFragment">

     <include layout="@layout/toolbar_header"
         android:id="@+id/toolbar"/>

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar" />

    <LinearLayout
        android:layout_width="@dimen/_200dp"
        android:layout_height="@dimen/_90dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:elevation="@dimen/_5dp"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginStart="@dimen/_10dp"
        android:background="@drawable/transparent_dark_bg"
        android:padding="@dimen/_10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Village"
            android:textColor="@color/white"/>
        <Spinner
            android:layout_width="@dimen/_170dp"
            android:id="@+id/village_spin"
            android:layout_height="@dimen/_35dp"
            android:layout_marginTop="@dimen/_2dp"
            android:dropDownSelector="@color/white"
            android:background="@drawable/transparent_light_bg"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_layer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:elevation="@dimen/_5dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_50dp"
        android:src="@drawable/ic_layer" />

    <ImageView
        android:id="@+id/legend_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/legend_btn"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10dp"
        android:elevation="@dimen/_5dp"
        android:src="@drawable/legends"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/legend_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/_5dp"
        android:src="@drawable/ic_legends" />

    <ImageView
        android:id="@+id/btn_map_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_layer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-15dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/_10dp"
        android:src="@drawable/ic_street" />
    <ImageView
        android:id="@+id/btn_ortho_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_map_type"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-15dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="@dimen/_10dp"
        android:src="@drawable/ic_ortho_loc" />
    <ImageView
        android:id="@+id/current_loc_btn"
        android:layout_width="@dimen/_65dp"
        android:layout_height="@dimen/_65dp"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_below="@+id/btn_ortho_loc"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-15dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_current_loc" />
    <androidx.cardview.widget.CardView
        android:id="@+id/layer_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_layer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/_10dp"
        android:layout_marginTop="@dimen/_15dp_min"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/_15dp">

            <ImageView
                android:id="@+id/close_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_10dp"
                android:src="@drawable/ic_close" />

            <CheckBox
                android:id="@+id/parcel_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:checked="true"
                android:textColor="@color/layer_text_color"
                android:textSize="@dimen/_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/view_line" />

            <CheckBox
                android:id="@+id/geo_json_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Geo Json"
                android:checked="true"
                android:visibility="gone"
                android:textColor="@color/layer_text_color"
                android:textSize="@dimen/_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:background="@color/view_line" />

            <CheckBox
                android:id="@+id/plot_id_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Plot ID"
                android:checked="true"
                android:textColor="@color/layer_text_color"
                android:textSize="@dimen/_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginStart="@dimen/_10dp"

                android:background="@color/view_line" />

            <CheckBox
                android:id="@+id/surveyed_plot_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Boundaries"
                android:checked="true"
                android:textColor="@color/layer_text_color"
                android:textSize="@dimen/_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginStart="@dimen/_10dp"
android:visibility="gone"
                android:background="@color/view_line" />

            <CheckBox
                android:id="@+id/remaining_plot_layer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Remaining Plots"
                android:visibility="gone"
                android:checked="true"

                android:textColor="@color/layer_text_color"
                android:textSize="@dimen/_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1dp"
                android:layout_marginStart="@dimen/_10dp"

                android:background="@color/view_line" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btnToggleMap"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_20dp"
        android:background="@android:color/white"
        android:elevation="@dimen/_5dp"
        android:padding="@dimen/_10dp"
        android:src="@drawable/baseline_map_24"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnToggleTile"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@id/btn_layer"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:background="@android:color/white"
        android:elevation="@dimen/_5dp"
        android:padding="@dimen/_10dp"
        android:src="@drawable/ic_checkbox_checked"
        android:visibility="gone" />

    <androidx.cardview.widget.CardView
        android:id="@+id/map_view_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Map Type"
                    android:textColor="@color/layer_text_color"
                    android:textSize="@dimen/_14sp" />

                <ImageView
                    android:id="@+id/close_map_type"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:src="@drawable/ic_close" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/street_btn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:orientation="vertical">

                   <RelativeLayout
                       android:id="@+id/street_rel"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingHorizontal="@dimen/_3dp"
                       >
                       <ImageView
                           android:id="@+id/img_street"
                           android:layout_width="70dp"
                           android:layout_height="70dp"
                           android:gravity="center_vertical"
                           android:layout_marginStart="0.5dp"
                           android:src="@drawable/img_street" />
                   </RelativeLayout>

                    <TextView
                        android:id="@+id/img_street_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Street"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/satellite_btn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/satellite_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_3dp"
                        >
                        <ImageView
                            android:id="@+id/img_satellite"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:layout_marginStart="0.5dp"
                            android:src="@drawable/img_satellite" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/img_satellite_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Satellite"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/terrain_btn"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_20dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/terrain_rel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="@dimen/_3dp"
                        >
                        <ImageView
                            android:id="@+id/img_terrain"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:gravity="center_vertical"
                            android:layout_marginStart="0.5dp"
                            android:src="@drawable/img_terrain" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/img_terrain_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5dp"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Tarrain"
                        android:textColor="@color/primary_color"
                        android:textSize="@dimen/_12sp" />
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/btnTogglelayer"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_below="@id/btnToggleTile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:background="@android:color/white"
        android:elevation="@dimen/_5dp"
        android:padding="@dimen/_10dp"
        android:src="@drawable/ic_checkbox_checked"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/btnGetLocation"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_5dp"
        android:elevation="@dimen/_5dp"
        android:padding="@dimen/_10dp"
        android:src="@drawable/baseline_my_location_24"

        android:visibility="gone" />


</RelativeLayout>